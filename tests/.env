# Options are: development, production, and testing
ENVIRONMENT=development

# DEBUG MODE
SHOW_DEBUG_ERRORS=on

# Web Sessions
WEB_SESSIONS_REDIS_SCHEME=tcp
WEB_SESSIONS_REDIS_HOST=127.0.0.1
WEB_SESSIONS_REDIS_PORT=6379

# Twig HTML Templating
TWIG_TEMPLATE_PATHS="src/Web:src/Cert:src/EventManagement"
TWIG_CACHE_PATH="../tmp/twig-cache"
TWIG_AUTO_RELOAD=true

ONLY_ONE_SIDE="hi

